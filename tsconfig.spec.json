{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "dom", "ES2018" ],
        "module": "ES6",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./test",
        "rootDir": "./test",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./test"
    ],
    "exclude": [
        "./src/**/__tests__/*.ts",
        "./src/__tests.ts"
    ]
}